<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfilProprietaire">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="7dp"
            android:layout_height="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back Button"
            android:src="@drawable/baseline_chevron_left_24" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/femalepro" />

        <TextView
            android:id="@+id/editTextText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawableRight="@drawable/baseline_chevron_right_24"
            android:ems="10"
            android:text="  informations personnelles"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/editTextText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/baseline_payment_24"
            android:drawableRight="@drawable/baseline_chevron_right_24"
            android:ems="10"
            android:text="  Paiements et versements"
            android:textSize="15dp" />



        <TextView
            android:id="@+id/editTextText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/baseline_playlist_add_24"
            android:drawableRight="@drawable/baseline_chevron_right_24"
            android:ems="10"
            android:text="  Publier une annonce"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/listePropText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_format_list_bulleted_24"
            android:text=" Liste des propriétés publiées"
            android:drawableRight="@drawable/baseline_chevron_right_24" android:textSize="15dp" android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/editTextText12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:drawableRight="@drawable/baseline_chevron_right_24"
            android:ems="10"
            android:text="  Se déconnecter"
            android:textSize="15dp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="619dp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="labeled"/>

</RelativeLayout>