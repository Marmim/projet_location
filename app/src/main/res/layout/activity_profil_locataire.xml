<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfilLocataire"
    android:orientation="vertical"
    android:gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_chevron_left_24" />
    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Locataire"
        android:textAlignment="center"
        android:textSize="20dp"
        android:inputType="none"
        android:focusable="false" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/femalepro" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Changer la photo de profile"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/editTextText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_person_24"
        android:text="  informations personnelles"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/editTextText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_payment_24"
        android:text="  Paiements et versements"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/editTextText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_notifications_24"
        android:text="  Notifications"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/editTextText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_favorite_24"
        android:text="  Favoris"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/editTextText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:text="  Se dÃ©connecter"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="619dp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="labeled"/>

</RelativeLayout>
