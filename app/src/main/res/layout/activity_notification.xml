<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".notification">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_background"
        android:layout_marginBottom="30dp">
    <EditText
        android:id="@+id/editnotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_chevron_left_24"
        android:drawableRight="@drawable/baseline_notifications_24"
        android:text="Notifications"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>
    </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/editTextText7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:drawableLeft="@drawable/like50"
                    android:text="  Nouvel intérêt pour votre propriété"
                    android:textColor="@color/orange"
                    android:drawableRight="@drawable/baseline_chevron_right_24"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Félicitations ! [Nom de l'utilisateur] a aimé votre propriété [Nom de la propriété]. Cela pourrait être un bon signe pour une future réservation ! "
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/editTextText8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:drawableLeft="@drawable/confirm"
                    android:text="  Réservation confirmée"
                    android:textColor="@color/orange"
                    android:drawableRight="@drawable/baseline_chevron_right_24"
                    android:textSize="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Félicitations ! Votre réservation pour [Nom de la propriété] a été confirmée pour les dates [Date de début] - [Date de fin]"
                    android:gravity="center"/>
            </LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/editTextText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:drawableLeft="@drawable/cancel60"
        android:text="  Réservation annulée"
        android:textColor="@color/orange"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Votre réservation pour [Nom de la propriété] a été annulée. Veuillez contacter le locataire pour plus d'informations"
        android:gravity="center"/>
</LinearLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="619dp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="labeled"/>
</RelativeLayout>