<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".proprietaire">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Que souhaitez-vous louer?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewMain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/img" />

        <ImageView
            android:id="@+id/imageViewSecondary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/img_1" />

    </LinearLayout>
    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"></Space>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="9dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Type de logement:"
            android:textSize="16sp"
            android:textColor="@color/move2"/>
        <Spinner
            android:id="@+id/Type"
            android:layout_width="120dp"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>
    <Space
        android:layout_width="10dp"
        android:layout_height="10dp"></Space>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="212dp"
                android:layout_height="90dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Votre Tarif"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tarif"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/label"
                    android:hint="en DH"
                    android:inputType="number"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Votre contact"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contacte"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/label"
                    android:hint="+212"
                    android:inputType="textFilter"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ecrire une déscription"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/description"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/label"
            android:hint="au moins 100 caractéres"
            android:inputType="text"
            android:padding="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="22dp"
                    android:backgroundTint="@color/move"
                    android:drawableLeft="@drawable/add_photo_icon"
                    android:text="Select"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <ImageSwitcher
                    android:id="@+id/IVPreviewImage"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/BSelectImage" />

                <ImageButton
                    android:id="@+id/previous"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="150dp"
                    android:src="@drawable/baseline_keyboard_arrow_left_24"
                    android:background="@android:color/transparent"
                    />

                <!--click here to view next image-->
                <ImageButton
                    android:id="@+id/next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="290dp"
                    android:layout_marginTop="90dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24" />


                />
            </RelativeLayout>

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choisissez la localisation de votre propriété"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="-30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ville"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Ville:"
                    android:textColor="@color/move2"
                    android:textSize="16sp"

                    />

                <Spinner
                    android:id="@+id/Ville_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="90dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quartier"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Quartier:"
                    android:textColor="@color/move2"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/Quartier_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/transparent"
                android:text="Retour"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <Button
                android:id="@+id/LancerButton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:backgroundTint="@color/orange"
                android:text="Lancer"
                android:textStyle="bold" />
        </LinearLayout>


</LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="619dp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="labeled"/>
</LinearLayout>







