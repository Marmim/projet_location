<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".proprietaire">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="7dp"
        android:layout_height="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_chevron_left_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="742dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Que souhaitez-vous louer?"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="30dp"
            android:layout_height="30dp"></Space>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="9dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewMain"
                    android:layout_width="100dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_weight="1"
                    android:src="@drawable/img" />

                <ImageView
                    android:id="@+id/imageViewSecondary"
                    android:layout_width="90dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:src="@drawable/img_1" />

            </LinearLayout>

        </LinearLayout>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"></Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="9dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Type de logement:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/Type"
            android:layout_width="130dp"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>


        <Space
            android:layout_width="30dp"
            android:layout_height="30dp"></Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="212dp"
                    android:layout_height="90dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Votre Tarif"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tarif"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/label"
                        android:hint="en DH"
                        android:inputType="number"
                        android:padding="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Votre contact"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/contacte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/label"
                        android:hint="+212"
                        android:inputType="textFilter"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ecrire une déscription"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="260dp"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/label"
                android:hint="au moins 100 caractéres"
                android:inputType="text"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter des photos"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/photos"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/label"
                android:drawableRight="@drawable/add_photo_icon"
                android:inputType="textFilter"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="choisissez la localisation de votre propriété"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:text="Quartier:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/QuartierSpinner"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Ville:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/Ville_spinner"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/AnnulerButton"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/transparent"
                    android:text="Ignorer"
                    android:textColor="@color/move"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/LancerButton"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:backgroundTint="@color/orange"
                    android:text="Lancer"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@color/black"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_menu"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="619dp" />
    </LinearLayout>


</RelativeLayout>







