        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inscrivez-vous"
